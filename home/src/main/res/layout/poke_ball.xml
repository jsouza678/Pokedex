<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/poke_ball_image_view_up_home_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/up_pokeball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/poke_ball_image_view_down_home_activity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/down_pokeball"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poke_ball_image_view_up_home_activity" />

    <ImageView
        android:id="@+id/poke_ball_center_stroke_home_activity"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/ball"
        android:translationZ="2dp"
        app:layout_constraintTop_toTopOf="@id/poke_ball_image_view_down_home_activity"
        app:layout_constraintBottom_toBottomOf="@+id/poke_ball_image_view_up_home_activity" />

    <ImageView
        android:id="@+id/poke_ball_center_circle_home_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="1.2"
        app:layout_constraintBottom_toTopOf="@id/poke_ball_image_view_down_home_activity"
        app:layout_constraintTop_toBottomOf="@+id/poke_ball_image_view_up_home_activity"/>

</androidx.constraintlayout.widget.ConstraintLayout>