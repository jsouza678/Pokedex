<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="4dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_poke_item_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2CDAB1"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_poke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/mock_poke_name"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tv_id_poke"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_id_poke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#001"
                android:textColor="#80000000"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_name_poke"
                app:layout_constraintEnd_toEndOf="@id/iv_poke_sprite"
                app:layout_constraintTop_toTopOf="@id/tv_name_poke" />

            <ImageView
                android:id="@+id/iv_poke_sprite"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/cd_iv_poke_sprite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_habitat"
                app:layout_constraintTop_toBottomOf="@id/tv_name_poke"
                tools:src="@drawable/mock_poke_image" />


            <TextView
                android:id="@+id/tv_habitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:padding="4dp"
                android:text="Flying"
                android:textColor="@color/real_white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_poke_sprite"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>