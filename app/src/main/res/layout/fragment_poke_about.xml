<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.details.details_nested.about.AboutFragment">

    <TextView
        android:id="@+id/tv_poke_desc"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_margin_16"
        android:layout_marginTop="@dimen/material_margin_16"
        android:layout_marginEnd="@dimen/material_margin_16"
        tools:text="@string/mock_body_desc"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:ellipsize="end"
        android:maxLines="3"/>

    <TextView
        android:id="@+id/tv_variations"
        style="@style/poke_name_detail_style"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_margin_16"
        android:layout_marginTop="@dimen/material_margin_24"
        android:layout_marginEnd="@dimen/material_margin_16"
        android:gravity="center"
        android:text="@string/text_view_poke_variations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_poke_desc" />

    <Spinner
        android:id="@+id/spinner_variations"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_margin_16"
        android:layout_marginTop="@dimen/material_margin_8"
        android:layout_marginEnd="@dimen/material_margin_16"
        android:layout_marginBottom="@dimen/material_margin_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_variations"
        tools:listitem="@tools:sample/cities[0]"/>

</androidx.constraintlayout.widget.ConstraintLayout>