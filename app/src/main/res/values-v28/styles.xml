<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="stat_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/stat_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="stat_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/stat_label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="custom_tab_text_style" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:capitalize">words</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/custom_card_view_top_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/custom_card_view_top_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/custom_card_view_low_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/custom_card_view_low_corner_radius</item>
    </style>

    <style name="poke_name_detail_style">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/material_margin_16</item>
        <item name="android:layout_marginEnd">@dimen/material_margin_16</item>
        <item name="android:layout_marginBottom">@dimen/material_margin_16</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/poke_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="pokemon_logo_style_home">
        <item name="android:fontFamily">@font/poke_solid</item>
        <item name="android:shadowColor">@color/yellow_poke</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/blue_poke</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_pokes_in_search_text">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/custom_tab_text_style</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="pokedex_logo_splash_screen">
        <item name="android:fontFamily">@font/poke_solid</item>
        <item name="android:textColor">@color/poke_black</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="button_default" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">@dimen/material_margin_16</item>
        <item name="android:layout_marginTop">@dimen/material_margin_8</item>
        <item name="android:layout_marginEnd">@dimen/material_margin_16</item>
        <item name="android:layout_marginBottom">@dimen/material_margin_16</item>
    </style>

    <style name="style_welcome_text_main_activity">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
