<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Custom Styles -->
    <style name="pokemon_logo_style_home">
        <item name="android:fontFamily">@font/poke_solid</item>
        <item name="android:shadowColor">@color/yellow_poke</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/blue_poke</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="pokedex_logo_splash_screen">
        <item name="android:fontFamily">@font/poke_solid</item>
        <item name="android:textColor">@color/poke_black</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="style_welcome_text_main_activity">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="default_button">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/main_button</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="paddingEnd">@dimen/default_padding_button</item>
        <item name="paddingStart">@dimen/default_padding_button</item>
    </style>

    <style name="small_button" parent="default_button">
        <item name="android:layout_marginStart">@dimen/material_margin_16</item>
        <item name="android:layout_marginTop">@dimen/material_margin_16</item>
        <item name="android:layout_marginEnd">@dimen/material_margin_16</item>
        <item name="android:layout_marginBottom">@dimen/material_margin_16</item>
    </style>

    <style name="large_button" parent="default_button">
        <item name="android:layout_marginStart">@dimen/material_margin_32</item>
        <item name="android:layout_marginTop">@dimen/material_margin_32</item>
        <item name="android:layout_marginEnd">@dimen/material_margin_32</item>
        <item name="android:layout_marginBottom">@dimen/material_margin_32</item>
    </style>


</resources>
